<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <LinearLayout
        android:id="@+id/umeng_update_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/update_dialog_bg"
         >
	<RelativeLayout 
	    android:layout_width="fill_parent"
            android:layout_height="34dp"
	      android:layout_marginTop="15dp"
	    >
	    <ImageView 
		     android:id="@+id/umeng_update_id_cancel"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="23dp"
                android:background="@drawable/update_button_cancel"
		    />
		<TextView 
		    android:layout_width="fill_parent"
            android:layout_height="fill_parent"
		    android:text="发现新版本"
		    android:textColor="@android:color/black"
		    android:layout_alignParentLeft="true"
		    android:textSize="16dp"
		    android:gravity="center"
		    />
		
		</RelativeLayout>
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            
             >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/umeng_update_content"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textSize="13dp"
                   
                    android:textColor="#000" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/umeng_update_id_ok"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/update_button_ok"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="@string/pdateNow"
            android:textSize="16dp"
            android:textColor="#1CA7FF" />
    </LinearLayout>

</RelativeLayout>